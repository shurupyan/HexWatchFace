<resources>

	<properties>
		<property id="timeColor_prop" type="number">0xFFFFFF</property>
		<property id="timeFont_prop" type="number">0</property>
		<property id="backColor_prop" type="number">0x000000</property>
		<property id="infoColor_prop" type="number">0x00AA00</property>
		<property id="showZeroPrefix_prop" type="boolean">true</property>
		<property id="bigFont_prop" type="boolean">true</property>
	</properties>

	<strings>
		<string id="timeColor_title">Time color</string>
		<string id="timeColor_prompt">Select color of time digits</string>
		<string id="timeFont_title">Time font</string>
		<string id="timeFont_prompt">Select font of time digits</string>
		<string id="showZeroPrefix_title">Show '0x' prefix</string>
		<string id="bigFont_title">Use big Sans font without '0x' prefix</string>
		<string id="DOS_title">DOS-like font</string>
		<string id="open_sans_title">Open Sans font</string>
		<string id="backColor_title">Background color</string>
		<string id="backColor_prompt">Select color of background</string>
		<string id="infoColor_title">Info color</string>
		<string id="infoColor_prompt">Select color of additional information</string>
		<string id="red_title">Red</string>
		<string id="blue_title">Blue</string>
		<string id="green_title">Green</string>
		<string id="white_title">White</string>
		<string id="lt_gray_title">Light Gray</string>
		<string id="dk_gray_title">Dark Gray</string>
		<string id="black_title">Black</string>
		<string id="dk_red_title">Dark Red</string>
		<string id="orange_title">Orange</string>
		<string id="yellow_title">Yellow</string>
		<string id="dk_green_title">Dark Green</string>
		<string id="dk_blue_title">Dark Blue</string>
		<string id="purple_title">Purple</string>
		<string id="pink_title">Pink</string>
	</strings>

	<settings>
	
		<setting propertyKey="@Properties.showZeroPrefix_prop" title="@Strings.showZeroPrefix_title">
				<settingConfig type="boolean"/>
		</setting>
		
		<setting propertyKey="@Properties.bigFont_prop" title="@Strings.bigFont_title">
				<settingConfig type="boolean"/>
		</setting>
		
		<setting propertyKey="@Properties.timeColor_prop" title="@Strings.timeColor_title"
			prompt="@Strings.timeColor_prompt">
			<settingConfig type="list">
				<listEntry value="0xFFFFFF">@Strings.white_title</listEntry>
				<listEntry value="0xAAAAAA">@Strings.lt_gray_title</listEntry>
				<listEntry value="0x555555">@Strings.dk_gray_title</listEntry>
				<listEntry value="0x000000">@Strings.black_title</listEntry>
				<listEntry value="0xFF0000">@Strings.red_title</listEntry>
				<listEntry value="0xAA0000">@Strings.dk_red_title</listEntry>
				<listEntry value="0xFF5500">@Strings.orange_title</listEntry>
				<listEntry value="0xFFAA00">@Strings.yellow_title</listEntry>
				<listEntry value="0x00FF00">@Strings.green_title</listEntry>
				<listEntry value="0x00AA00">@Strings.dk_green_title</listEntry>
				<listEntry value="0x00AAFF">@Strings.blue_title</listEntry>
				<listEntry value="0x0000FF">@Strings.dk_blue_title</listEntry>
				<listEntry value="0xAA00FF">@Strings.purple_title</listEntry>
				<listEntry value="0xFF00FF">@Strings.pink_title</listEntry>
			</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.timeFont_prop" title="@Strings.timeFont_title"
			prompt="@Strings.timeFont_prompt">
			<settingConfig type="list">
				<listEntry value="0">@Strings.DOS_title</listEntry>
				<listEntry value="1">@Strings.open_sans_title</listEntry>
			</settingConfig>
		</setting>

		<setting propertyKey="@Properties.backColor_prop" title="@Strings.backColor_title"
			prompt="@Strings.backColor_prompt">
			<settingConfig type="list">
				<listEntry value="0xFFFFFF">@Strings.white_title</listEntry>
				<listEntry value="0xAAAAAA">@Strings.lt_gray_title</listEntry>
				<listEntry value="0x555555">@Strings.dk_gray_title</listEntry>
				<listEntry value="0x000000">@Strings.black_title</listEntry>
				<listEntry value="0xFF0000">@Strings.red_title</listEntry>
				<listEntry value="0xAA0000">@Strings.dk_red_title</listEntry>
				<listEntry value="0xFF5500">@Strings.orange_title</listEntry>
				<listEntry value="0xFFAA00">@Strings.yellow_title</listEntry>
				<listEntry value="0x00FF00">@Strings.green_title</listEntry>
				<listEntry value="0x00AA00">@Strings.dk_green_title</listEntry>
				<listEntry value="0x00AAFF">@Strings.blue_title</listEntry>
				<listEntry value="0x0000FF">@Strings.dk_blue_title</listEntry>
				<listEntry value="0xAA00FF">@Strings.purple_title</listEntry>
				<listEntry value="0xFF00FF">@Strings.pink_title</listEntry>
			</settingConfig>
		</setting>
		
		<setting propertyKey="@Properties.infoColor_prop" title="@Strings.infoColor_title"
			prompt="@Strings.infoColor_prompt">
			<settingConfig type="list">
				<listEntry value="0xFFFFFF">@Strings.white_title</listEntry>
				<listEntry value="0xAAAAAA">@Strings.lt_gray_title</listEntry>
				<listEntry value="0x555555">@Strings.dk_gray_title</listEntry>
				<listEntry value="0x000000">@Strings.black_title</listEntry>
				<listEntry value="0xFF0000">@Strings.red_title</listEntry>
				<listEntry value="0xAA0000">@Strings.dk_red_title</listEntry>
				<listEntry value="0xFF5500">@Strings.orange_title</listEntry>
				<listEntry value="0xFFAA00">@Strings.yellow_title</listEntry>
				<listEntry value="0x00FF00">@Strings.green_title</listEntry>
				<listEntry value="0x00AA00">@Strings.dk_green_title</listEntry>
				<listEntry value="0x00AAFF">@Strings.blue_title</listEntry>
				<listEntry value="0x0000FF">@Strings.dk_blue_title</listEntry>
				<listEntry value="0xAA00FF">@Strings.purple_title</listEntry>
				<listEntry value="0xFF00FF">@Strings.pink_title</listEntry>
			</settingConfig>
		</setting>
		
	</settings>
</resources>
